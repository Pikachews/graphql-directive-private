  "repository": "git@github.com:taylorgoolsby/graphql-directive-private.git",
  "author": "Taylor Goolsby <taylorgoolsby@users.noreply.github.com>",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=8.11.4"
  },
  "peerDependencies": {
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^23.3.3",
    "@types/lodash.get": "^4.4.4",
    "@types/node": "^15.0.1",
    "@types/ws": "^7.4.2",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.4",
    "husky": "^1.1.1",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
